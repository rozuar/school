# Backend (Go)
#
# Local Postgres (recommended)
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=school_monitoring
DB_SSLMODE=disable

# Or use a single DATABASE_URL (Railway/Cloud)
# DATABASE_URL=postgresql://USER:PASSWORD@HOST:PORT/DBNAME

# Server
PORT=8080

# Environment
# local|prod (default: prod)
APP_ENV=local

# Security
JWT_SECRET=dev_secret_change_me

# Dev utilities
# DB_RESET=true

# Retention (days)
AUDIT_RETENTION_DAYS=30
EXEC_RETENTION_DAYS=30
OUTBOX_RETENTION_DAYS=30
ALERT_RETENTION_DAYS=90

# Retention worker
# If set, overrides APP_ENV behavior.
# ENABLE_RETENTION_WORKER=true


